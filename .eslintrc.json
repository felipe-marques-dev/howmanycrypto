{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off", // Desativa o erro 'Unexpected any'
    "@typescript-eslint/no-empty-object-type": "off", // Desativa erro para interfaces vazias
    "react-hooks/exhaustive-deps": "off", // Ignora dependências do useEffect
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-unused-expressions": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "off" // Alerta ao invés de erro para variáveis não reassigned
  }
}
